<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="ring"
            android:thickness="10dp"
            android:useLevel="false" tools:ignore="StateListReachable">

            <solid android:color="@color/heart_rate_progress_background_color"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <shape android:shape="ring"
            android:thickness="10dp"
            android:useLevel="true">

            <solid android:color="@color/heart_rate_progress_color"/>
        </shape>
    </item>

</layer-list>