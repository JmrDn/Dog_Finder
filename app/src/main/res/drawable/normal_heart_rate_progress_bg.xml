<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:id="@android:id/background">
        <shape android:shape="ring"
            android:thickness="10dp"
            android:useLevel="false" tools:ignore="StateListReachable" >

            <solid android:color="@color/normal_heart_rate_bg"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <shape android:shape="ring"
            android:thickness="10dp"
            android:useLevel="true">

            <solid android:color="@color/normal_heart_rate"/>
        </shape>
    </item>

</layer-list>